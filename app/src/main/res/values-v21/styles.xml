<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimaryDark">@color/app_primary_color_dark</item>
        <item name="android:windowBackground">@color/app_color_background</item>

    </style>

    <style name="groupactivity" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@color/app_color_background</item>

    </style>


    <style name="ViewerThemeBase" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_color</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/app_color_background</item>
    </style>

    <style name="ViewerTheme" parent="ViewerThemeBase">
        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>